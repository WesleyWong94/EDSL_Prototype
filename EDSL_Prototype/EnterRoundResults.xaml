        <ComboBox HorizontalAlignment="Left" Margin="191,94,0,0" VerticalAlignment="Top" Width="120" Height="20"/>
        <ComboBox HorizontalAlignment="Left" Margin="191,120,0,0" VerticalAlignment="Top" Width="120" Height="21"/>
